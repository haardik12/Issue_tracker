<head>
  <style>
    .card {
      background-color: rgb(236, 214, 127);
      height: 230px;
    }

    .card .open {
        margin-bottom: -20px;
        text-decoration: none;
        position: absolute;
    }

    strong {
        font-size: 20px;
    }
  </style>
</head>

<body>
  <!-- Your HTML code here -->
  <div class="mb-5 p-5">
    <% for( let project of projects ) { %>
      <div class="card mb-5 w-75 m-auto p-auto">
        <div class="card-header">
          <strong> NAME OF THE PROJECT : </strong>
          <%= project.name %>
        </div>
        <div class="card-body">
          <h6 class="card-subtitle mb-3 text-muted">
            <strong> AUTHOR : </strong>
            <%= project.author %>
          </h6>
          <p class="card-text mb-5">
            <strong> DESCRIPTION : </strong>
            <%= project.description %>
          </p>

          <div class="open">
            <a href="/project/<%=project._id%>" class="btn btn-success m-auto">OPEN PROJECT</a>
            <a href="/project/delete/<%=project._id%>" class="btn btn-success m-auto">DELETE PROJECT</a>
          </div>
        </div>
      </div>
      <% } %>
  </div>
</body>